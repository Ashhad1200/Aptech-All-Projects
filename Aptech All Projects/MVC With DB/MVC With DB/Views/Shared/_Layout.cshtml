<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>MVC_With_DB - My Blogs</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_With_DB.styles.css" asp-append-version="true" />
</head>
<body >
    <header>
        <nav class="navbar navbar-dark bg-dark  mb-4">
            <div class="container-fluid">
                <h5 class="text-body-emphasis h4"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">My Blogs</a></h5>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">My Blogs</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">

                        <button type="button" class="btn btn-secondary mb-2 text-decoration-none">
                            <a class=" text-light text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">

                            Home

                            </a>
                           
                        </button>
                        <br />
                        <div class="btn-group dropend mb-2  ">
                            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Add
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tags" asp-action="AddTag">Add Tags</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Blogs" asp-action="AddBlog">Add Blogs</a>
                                </li>
                            </ul>
                        </div>
                        <br />


                        <div class="btn-group dropend mb-2 ">
                            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                View
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tags" asp-action="Fetch">View Tags</a>
                                </li>

                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Blogs" asp-action="Fetch">View Blogs</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>














    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - My Blogs  By "Ashhad"- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
