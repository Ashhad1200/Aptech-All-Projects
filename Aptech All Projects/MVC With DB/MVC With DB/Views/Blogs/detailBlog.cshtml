@model MVC_With_DB.Models.Blog

<div class="max-w-md w-full bg-white shadow-lg rounded-md p-6">
    <!-- Blog Image -->
    <img src="~/@Model.Image" alt="Blog Image" class="mb-4 rounded-md w-100">

    <!-- Author and Description -->
    <div class="mb-4">
        <p class="text-gray-500 text-sm">By <span class="font-semibold">@Model.Author</span></p>
        <p class="text-gray-700 text-md">@Model.Description</p>
    </div>

    <!-- Subheading and Title -->
    <div class="mb-4">
        <h4 class="text-gray-600 text-md">@Model.Subheading</h4>
        <h2 class="text-2xl font-semibold">@Model.Author</h2>
    </div>

    <!-- Content -->
    <div class="text-gray-800 leading-relaxed">
        <p>@Model.Content</p>
        <!-- Additional content goes here -->
    </div>

    <!-- Back to Home Button -->
    <div class="mt-4">
        <a  class="text-blue-500 hover:underline">Back to Home</a>
        <div>
            <a class="btn btn-outline-primary" asp-route-id="@Model.Id" asp-action="editBlog">Edit</a>
            <a class="btn btn-outline-danger" asp-route-id="@Model.Id" asp-action="deleteBlog">Delete</a>
            <a class="btn btn-outline-warning" asp-controller="Home" asp-action="Index">Back to Home</a>
        </div>
    </div>
</div>