@{
    ViewBag.Title = "Home - My Blog";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>Welcome to My Blog!</h1>
            <p class="lead">Discover interesting articles, insights, and more.</p>

            <div class="card mb-4">
                <img src="~/lib/Img/web-design-blogs-design-shack.png" class="card-img-top" alt="Blog Post Image">
                <div class="card-body">
                    <h2 class="card-title">Latest Blog Post</h2>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Blogs" asp-action="Fetch">Read More</a>
                </div>
            </div>

            <div class="card mb-4">
                <img src="~/lib/Img/13-creative-market-blog..jpg" class="card-img-top" alt="Blog Post Image">
                <div class="card-body">
                    <h2 class="card-title">Another Interesting Post</h2>
                    <p class="card-text">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    <a  class="btn btn-primary" asp-area="" asp-controller="Blogs" asp-action="Fetch">Read More</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <h3>Popular Tags</h3>
            <ul class="list-group">
                <li class="list-group-item"><a asp-area="" asp-controller="Tags" asp-action="Fetch">Technology</a></li>
                <li class="list-group-item"><a asp-area="" asp-controller="Tags" asp-action="Fetch">Travel</a> </li>
                <li class="list-group-item"><a asp-area="" asp-controller="Tags" asp-action="Fetch">Food</a></li>
                <li class="list-group-item"><a asp-area="" asp-controller="Tags" asp-action="Fetch">Programming</a></li>
            </ul>
        </div>
    </div>
</div>
