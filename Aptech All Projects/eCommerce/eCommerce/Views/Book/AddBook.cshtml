@model eCommerce.Models.Book

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<h1>
    Add Book
</h1>

<form method="post" enctype="multipart/form-data">

    <div class="row g-3">

        <div class="col">
            <label for="InputTitle" class="form-label">Book Title</label>
            <input type="text" class="form-control" asp-for="BookName" placeholder="Title" aria-label="Title">
        </div>

        <div class="col">
            <label for="InputSubHeading" class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="Price" placeholder="Price" aria-label="Price">
        </div>

    </div>

    <div class="row g-3">

        <div class="col">
            <label for="InputDescription" class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" placeholder="Author" aria-label="Author">
        </div>
    </div>
    <div>
        <label for="floatingSelect">Category</label>
        <div class="form-floating">
            <select class="form-select" id="categoryId" name="categoryId" aria-label="Floating label select example">
                <option selected>Select Category</option>
                <option value="1" asp-for="CategoryId">Horror</option>
                <option value="2" asp-for="CategoryId">Adventure</option>
                <option value="3" asp-for="CategoryId">Science</option>
            </select>
        </div>
    </div>
    <div class="row g-3 mb-2">
@*        <div class="col">
            <label for="InputTitle" class="form-label">Content</label>
            <input type="text" class="form-control" asp-for="Content" placeholder="Title" aria-label="Title">
        </div>*@
    </div>
    <div class="row g-3 mb-2">
        <input type="file" asp-for="Image" name="imgfile" class="form-control" aria-describedby="inputGroupFileAddon04" aria-label="Upload">

    </div>

    <button type="submit" class="btn btn-primary">Add Blog 😊</button>
</form>